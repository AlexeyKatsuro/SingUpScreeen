<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/light_teal</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>



    <style name="HintTextLable" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/field_hint</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="HintTextLableError" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/field_hint</item>
        <item name="android:textColor">@android:color/holo_red_light</item>

    </style>

    <style name="HintTextLableRight" parent="HintTextLable">
        <item name="android:textColor">@color/greenblue</item>
    </style>

    <style name="TextLable" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/light_teal</item>
    </style>

    <style name="ErrorText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>
</resources>
